{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist/",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowUmdGlobalAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["types/**/*.ts", "**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
